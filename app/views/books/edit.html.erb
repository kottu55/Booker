


<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>


    <p>title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <p><%= f.submit 'Update Book' %></p>
<% end %>

<%= link_to 'show', book_path(@book.id)%><span> | </span><%= link_to 'back', "/books"%>