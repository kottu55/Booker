<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to 'show', book_path(book.id)%></td>
			<td><%= link_to 'edit', edit_book_path(book.id)%></td>
			<td><%= link_to 'destroy', destroy_book_path(book.id), nethod: :delete, "data-confirm" => "Are you sure?" %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<h2>new book</h2>
<%= form_for @book, :url => {:action => :create} do |f| %>
<p>Title</p>
 <%= f.text_field :title %>
<p>Body</p>
    <%= f.text_area :body %>
<p></p>
 <%= f.submit 'Create Book' %>
<% end %>